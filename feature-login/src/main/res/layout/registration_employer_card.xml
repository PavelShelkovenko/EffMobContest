<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_rounded_gray_8"
    android:paddingHorizontal="16dp"
    android:paddingVertical="24dp">

    <TextView
        android:id="@+id/title_employer_card"
        style="@style/Title_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_employer_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info_registration_employer_card"
        style="@style/Text_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/info_registration_employer_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_employer_card" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/looking_for_employee_button"
        style="@style/BasicGreenButton"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="0.5"
        android:text="@string/looking_for_employee_button_text"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_registration_employer_card" />

</androidx.constraintlayout.widget.ConstraintLayout>